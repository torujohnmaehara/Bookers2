  <!DOCTYPE html>
  <html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navber-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navber navber-left" style="color: white; font-size: 20px;">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right" role="navigation">
            <% if user_signed_in? %>
            <li class="text-muted">
              <span class="glyphicon glyphicon-home" aria-hidden="true">
                <%= link_to 'Home', user_path(current_user.id), class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-user" aria-hidden="true">
                <%= link_to 'Users', users_path, class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-book" aria-hidden="true">
                <%= link_to 'Books', books_path, class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "text-muted" %>
              </span>
            </li>
            <% else %>
            <li class="text-muted">
              <span class="glyphicon glyphicon-home" aria-hidden="true">
                <%= link_to 'Home', root_path, class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-link" aria-hidden="true">
                <%= link_to 'About', home_about_path, class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-edit" aria-hidden="true">
                <%= link_to 'sign up', new_user_registration_path, class: "text-muted" %>
              </span>
            </li>
            <li class="text-muted">
              <span class="glyphicon glyphicon-log-in" aria-hidden="true">
                <%= link_to 'login', new_user_session_path, class: "text-muted" %>
              </span>
            </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </nav>
</header>

<%= yield %>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>
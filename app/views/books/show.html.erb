<p id="notice">
  <%= notice %>
</p>
<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this obj from being saved:<br>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        </ul>
    <% end %>
  	<div class="col-xs-3">
  	  <h2>User info</h2>
  	  <%= attachment_image_tag @user, :profile_image, class: "pull-left profile-img", fallback: "no_image.jpg", size: "90x90" %> <br><br><br><br><br>
	   <table class="table">
	     <tbody>
	  	 <tr>
	       <th>name</th> <th><%= @user.name %></th>
	  	 </tr>
	  	 <tr>
	  	   <th>introduction</th>
	  	   <th>
	  	   	 <%= @user.introduction %>
	  	   </th>
	  	 </tr>
	  	</tbody>
	   </table>
	     <%= link_to edit_user_path, class: 'col-xs-12 btn btn-default' do %>
	  	 <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	  　　<% end %>
	   <br><br>

	  <h2>New book</h2>
	   <%= form_for @nbook do |book| %>
	     <div class="field row">
	       <p>Title</p>
	         <%= book.text_field :title, class: 'col-xs-12' %>
	     </div>
	     <div class="field row">
	       <p>Opinion</p>
	         <%= book.text_area :body, class: 'col-xs-12' %>
	     </div><br>
	     <div class="action row">
		   <%= book.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
		 </div>
	   <% end %>
	</div>

	<div class="col-xs-9">
	  <h2>Book detail</h2>
	  <table class="table">
	    <tbody>
	  	<tr>
	  	  <td>
	  	  	<%= link_to(@book.user) do %>
	  	  	<%= attachment_image_tag @book.user, :profile_image, size: "40x40", class: "pull-left profile-img", fallback: "no_image.jpg" %><br><br>
	  	  	<%= @book.user.name %>
	  	  	<% end %>
	  	  </td>
	  	  <td><%= @book.title %></td>
	  	  <td><%= @book.body %></td>
	  	  <% if @book.user == current_user %>
	  	    <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-default' %></td>
	  	    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-default' %>
	  	    </td>
	  	  <% end %>
	  	</tr>
	    </tbody>
	  </table>
	</div>
   </div>
</div>
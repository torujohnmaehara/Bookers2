<%= form_for (@user) do |f| %>
<div class="container">
  <div class="row">
    <h2>User info</h2>
    <div class="form-group">
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:<br>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        </ul>
      <% end %>
      <label>Name</label>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <div class="user-edit-image">
      	<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', class: "pull-left profile-img" %>
      </div>
    </div>
    <label>Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <label>Introduction</label>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User", class:"btn btn-default" %>
  </div>
</div>
<% end %>
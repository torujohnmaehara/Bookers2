<div class="container">
  <div class="row">
  	<p id="notice">
  	 <%= notice %>
  	</p>
  	<div class="col-xs-3">
   	  <h2>User info</h2>
  	  <%= attachment_image_tag @user, :profile_image, size: "90x90", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %> <br><br><br><br><br>

  	  <table class="table table-striped">
  	    <tr>
          <td>name</td>
          <td><%= @user.name %></td>
  	    </tr>
  	    <tr>
  	      <td>introduction</td>
  	      <td>
  	        <%= @user.introduction %>
  	      </td>
  	    </tr>
  	  </table>
  	  <% if @user == current_user %>
        <%= link_to edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default' do %>
  	      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% else %>
        <%= link_to users_path, class: 'btn btn-default' do %>
  	      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% end %>
      <br><br>

	    <h2>New book</h2>
	     <%= form_for @nbook do |book| %>
	       <div class="field row">
	         <p>Title</p>
	           <%= book.text_field :title, class: 'col-xs-12' %>
	       </div>
	       <div class="field row">
	         <p>Opinion</p>
	           <%= book.text_area :body, class: 'col-xs-12' %><br>
	       </div><br>
	        <div class="action row">
		       <%= book.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
	       </div>
	     <% end %>
	</div>

	<div class="col-xs-9 pull-right">
	  <h2>Books</h2>
	  <table class="table table-striped">
	  	<thead>
	  	  <tr>
	  	  	<th></th>
	  	  	<th>Title</th>
	  	  	<th>Opinion</th>
	  	  </tr>
	  	</thead>
	    <tbody>
	    <% @books.each do |book| %>
	  	  <tr>
	  	    <td><%= attachment_image_tag @user, :profile_image, size: "30x30", class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
	  	    <td><%= link_to book.title, book_path(book.id) %></td>
	  	    <td><%= book.body %></td>
	  	  </tr>
	  	<% end %>
	    </tbody>
	  </table>
	</div>
   </div>
</div>
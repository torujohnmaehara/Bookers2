<div class="container">
  <div class="row">
  	<p id="notice">
  	 <%= notice %>
  	</p>
  	<div class="col-xs-3">
  	<h3>User info</h3>
  	<%= attachment_image_tag @user, :profile_image, size: "90x90", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %> <br><br><br><br><br>

  	<table class="table table-striped">
  	  <tr>
        <td>name</td>
        <td><%= @user.name %></td>
  	  </tr>
  	  <tr>
  	    <td>introduction</td>
  	    <td>
  	      <%= @user.introduction %>
  	    </td>
  	  </tr>
  	</table>
  	<% if @user == current_user %>
      <%= link_to edit_user_path(current_user.id), class: 'btn btn-default' do %>
  	  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
    <% else %>
      <%= link_to users_path, class: 'btn btn-default' do %>
  	  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
    <% end %>
	  <h2>New book</h2>
	   <%= form_for @aaa do |book| %>
	     <p>Title</p>
	       <%= book.text_field :title %>
	     <p>Opinion</p>
	       <%= book.text_area :body %><br>
		   <%= book.submit 'Create Book' %>
	   <% end %>
	</div>

	<div class="col-xs-9 pull-right">
	  <h3>Books</h3>
	  <table class="table table-striped">
	  	<thead>
	  	  <tr>
	  	  	<th></th>
	  	  	<th>Title</th>
	  	  	<th>Opinion</th>
	  	  </tr>
	  	</thead>
	    <tbody>
	    <% @books.each do |book| %>
	  	<tr>
	  	  <td><%= attachment_image_tag @user, :profile_image, size: "30x30", class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
	  	  <td><%= link_to book.title, book_path(book.id) %></td>
	  	  <td><%= book.body %></td>
	  	</tr>
	  	<% end %>
	    </tbody>
	  </table>
	</div>
   </div>
</div>